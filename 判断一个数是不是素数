#include<iostream>
#include<iomanip>
using namespace std;
int main()
{	
	int m = 0;
	do
	{
		cout << "请输入一个数:" << endl;
		cin >> m;
	} while (m <= 0);
	int i = 0;
	for (i = 2; i < m; i++)
	{
		if (m % i == 0)
		{
			break;
		}
	}
	if (m == i)
	{
		cout << "m是素数" << endl;
	}
	else
	{
		cout << "m不是素数" << endl;
	}
	return 0;
}
