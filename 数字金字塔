//按书上写的数字金字塔:

#include<iostream>
using namespace std;
int main()
{
	int i = 0;
	int j = 0;
	for (i = 1; i < 10; i++)
	{
		for (j = 0; j <= 10 - i; j++)
		{
			cout << ' ';
		}
		for (j = 1; j <= i; j++)
		{
			cout << i << ' ';
		}
		cout << endl;
	}
	return 0;
}